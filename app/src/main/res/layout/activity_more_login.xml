<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.module.MoreLoginActivity"
    android:orientation="vertical"
    android:background="@color/every_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:onClick="login_finish"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/chahao"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登陆你的头条,精彩永不丢失"
        android:gravity="center"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_bg"

        >
        <EditText
            android:id="@+id/et_phone"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="请输入手机号"
            android:background="@null"
            android:layout_weight="2"
            android:textSize="12dp"/>

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/send_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center"
            android:text="|  发送验证码"
            android:textSize="12dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_bg"
        >
        <EditText
            android:id="@+id/et_yanzhengma"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="请输入验证码"
            android:background="@null"
            android:layout_weight="1"
            android:textSize="12dp"/>

    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="来注册手机验证后自动登录"
        android:gravity="center"
        android:textColor="#999"/>
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="进入头条"
        android:background="@drawable/jinrubtn"
        android:layout_margin="10dp"
        android:textColor="#fff"/>

    <CheckBox
        android:checked="true"
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我已阅读 并同意'用户协议和隐私条款'"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="账号密码登录"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#6180AA"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="----更多登录方式----"
    android:gravity="center"
    android:textColor="#999"
    android:layout_marginTop="70dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" android:layout_weight="1"
            android:src="@drawable/weixin1"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" android:layout_weight="1"
            android:src="@drawable/qq01"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" android:layout_weight="1"
            android:src="@drawable/weibo"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" android:layout_weight="1"
            android:src="@drawable/tianyi" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" android:layout_weight="1"
            android:src="@drawable/youxiang"/>
    </LinearLayout>
</LinearLayout>
